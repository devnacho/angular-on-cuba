.ei-click-to-edit
  .editable{ ng: { hide: "edit", click: "edit = true" } }
    {{editableText}}
    %i.fa.fa-pencil
  %div{ ng: { show: "edit"} }
    %form.form-inline{name: "clickToEdit"}
      .form-group
        %input.form-control{ ng: { model: "editableText", required: "required" }, type: "text" }
        %a.btn.btn-sm.btn-success{ href: "", ng: { click: "saveEdit()", disabled: "clickToEdit.$invalid" } }
          %i.fa.fa-check
        %a.btn.btn-sm.btn-danger{ href: "", ng: { click: "discardEdit()" } }
          %i.fa.fa-times