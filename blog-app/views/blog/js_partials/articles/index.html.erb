<div class="voffset5">
  <div class="page-header">
    <h1>Articles</h1>
  </div>
  <div ng-repeat='article in index.articles  | limitTo: index.articlesLimit '>
    <h2>
      {{article.title}}
      <small>{{ article.published_at | date:'d/M/y' }}</small>
    </h2>
    <p>{{ article.body | limitTo:400 }}</p>
    <a href='' ui-sref='articles-show({ id: article.id })'>View more</a>
    <hr>
  </div>
</div>

<a href="" ng-click="index.articlesLimit = index.articlesLimit + 2" ng-hide="index.articlesLimit >= index.articles.length">
  <i class="fa fa-plus-square"></i>
  Show more articles
</a>
