%form.simple-form{:novalidate => "", name: "articleForm"}
  .row
    .col-md-9
      .page-header
        %h1
          %ei-click-to-edit{ "editable-text" => "edit.article.title" , required: "true"}
  .row
    .col-md-9
      %br
      %ei-article-editor{ content: "edit.article.body", required: "true"}
      .checkbox
        %label
          %input{ type: 'checkbox', ng: { model: 'edit.article.published' } }
          Publish

      %hr
      %ul.list-inline
        %li
          %button.btn.btn-success.btn-lg{ ng: { click: 'edit.save()', disabled: "articleForm.$invalid" } } Save
        %li
          %a{ href: "/admin/articles" } Go Back
    .col-md-3
      %ei-tags{ tags: "edit.article.tags" }